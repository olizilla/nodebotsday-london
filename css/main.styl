@import 'nib'
@import 'nodebot'

global-reset()

body {
  background: #111
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight: 300
  margin:0
}

div#adventure-club {
  text-align: center
  padding: 10px
  color: #999
  background: linear-gradient(top, black, #333)
  text-shadow: 0px 2px #000
  position: absolute
  top: 0
  left: 0
  right: 0
}

h2, h3 {
  font-size: 2em
  padding-bottom: 20px
}

p {
  line-height: 1.2em
  margin-bottom: 10px
}

footer {
  padding: 10px
  text-align: center
  line-height: 1.6em
  color: #999
  text-shadow: 0px 2px #000
}
footer a {
  text-decoration: none
  color: #CCC
}
footer a:hover {
  color: #F7DF1F
}

footer a.gitter-link, footer a.gitter-link:hover {
  text-decoration: none
  background: url(https://badges.gitter.im/nodebots/london.svg)
  display: block
  width: 215px
  padding-top: 18px
  height: 0
  overflow: hidden
  margin: auto
  margin-top: 4px
}
